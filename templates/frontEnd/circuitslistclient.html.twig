{# templates/frontEnd/circuitslistclient.html.twig #}

{% extends "baselayout.html.twig" %}

{% block title %}{{ parent() }} - Nos destinations {% endblock %}

{% block body %}


<div id="myCarousel" class="carousel slide" style="margin-top:50px">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="../../images/accueil.jpg" alt="accueil">
      <div class="carousel-caption">
        <h1>A&A Voyages</h1>
        <h2>Découvrer nos offres exceptionnelles</h2>
      </div>
    </div>

    <div class="item">
      <img src="../../images/lo.jpg" alt="London">
      <div class="carousel-caption">
        <a class="sstitre" href="#"><h1>Londres</h1></a>
        <h3 class="sstitre">Profiter d'un week-end so British'</h3>
      </div>
    </div>

    <div class="item">
      <img src="../../images/thai.jpg" alt="Thailande">
      <div class="carousel-caption">
        <a class="sstitre" href="#"><h1>La Thaïlande</h1></a>
        <h3 class="sstitre">Comme vous ne l'avez jamais vue</h3>
      </div>
    </div>

    <div class="item">
      <img src="../../images/costa.jpg" alt="Costa-Rica">
      <div class="carousel-caption">
        <a class="sstitre" href="#"><h1>Costa Rica</h1></a>
        <h3 class="sstitre">Découvrer la vraie beauté préservée</h3>
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



<div class="container">
    <h1 class="my-4 text-center text-lg-center">Nos destinations</h1>
    {% if circuitslist is not empty %}
        <ul class="liste">
        <p class="">Envie de partir en voyage ? Découvrez nos circuits organisés et partez à l'aventure aux quatres coins du monde.</p>
        <div class="row text-center text-lg-left">
        {# Loop through list and creeate the list of circuit items. #}
        {% for circuit in circuitslist %}
            {% if circuit.programmations is not empty %}
                {% for programmation in circuit.programmations %}
                    {% if "now"|date('Y-m-d')  < programmation.dateDepart()|date('Y-m-d') %}
                        <div class="col-lg-4 col-md-4 col-xs-6 hovereffect">
                            <img class="img-fluid img-thumbnail circuit" src="{{ circuit.image }}" alt="">
                            <div class="overlay">
                                <h3>{{ circuit.description }}</h3>
                                <p class="info">Départ de {{ circuit.villeDepart }} pour {{ circuit.dureeCircuit }} j.
         de voyage à travers le {{ circuit.paysDepart }}, pour terminer à
         {{ circuit.villeArrivee }}.<a href="{{ path('circuitshowclient', { 'id' : circuit.id }) }}"><b> EN SAVOIR PLUS... </b></a></p>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endfor %}
    {% else %}
        <p>Désolé, il n'y a aucun circuit disponible</p>
    {% endif %}
</div></div>

{% endblock %} {# body #}
